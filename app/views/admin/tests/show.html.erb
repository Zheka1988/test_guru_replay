<div class="row justify-content-md-center mt-3 text-center">
  <div class = "col col-md-auto ">
    <strong><%= t('.title') %>:&nbsp;</strong>
    <%= @test.title %> <br>
    <strong><%= t('.level') %>:&nbsp;</strong>
    <%= @test.level %> <br>
    <strong><%= t('.author') %>:&nbsp;</strong>
    <%= @test.author.username %> <br>

    <h5 class="text-center text-success">Tаблица вопросов</h5>
    <table class="table table-hover table-sm table-responsive text-center">
      <thead class="thead-dark ">
        <tr>
          <th>Вопросы</th>
          <th colspan ="3">Действия</th>
        </tr>
      </thead>
      <%= render @test.questions %>
    </table>
  </div>
</div>

<div class="row">
  <div class="col text-center">
    <%= link_to 'Создать вопрос', new_admin_test_question_path(@test), class:'text-dark' %>&nbsp;|&nbsp;
    <%= link_to 'Все тесты', admin_tests_path, class: 'text-dark'%>
  </div>
</div>
