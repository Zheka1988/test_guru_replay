<p>
  <tr>
    <td class="align-middle">
      <%= content_tag :span, test.title, class: 'test-title', data: {test_id: test.id} %>
      <%= render 'form_inline', test: test == @test ? @test : test %> 
    </td>
    <td class="text-center"><%= test.level %></td>
    <td> <%= test.author.username %> </td>
    <td class="text-center"><%= test.questions.count %></td>
    <td><%= link_to t('admin.tests.index.show'), admin_test_path(test)%></td>
    <td><%= link_to t('admin.tests.index.edit'), edit_admin_test_path(test),
      data: { test_id: test.id },
      class: 'form-inline-link' %>
    </td>
    <td><%= link_to t('admin.tests.index.delete'), admin_test_path(test),
                     method: :delete,
                     data: {confirm: 'Вы уверены?'} %>
    </td>
  </tr>  
</p>
